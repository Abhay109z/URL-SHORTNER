{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",             
    "moduleResolution": "node",       
    "target": "es2019",               
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false     
  },
  "ts-node": {
    "esm": false
  }
}